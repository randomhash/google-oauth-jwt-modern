{
    "exclude": ["node_modules", "src/**/*.test.ts"],
    "include": ["src"],
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "module": "commonjs",
      "target": "esnext",
      "sourceMap": false,
      "isolatedModules": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "typeRoots": ["node_modules/@types", "./types-3rd-party"],
      "allowJs": false,
      "declaration": true,
      "declarationDir": "lib",
      "emitDeclarationOnly": true,
    }
  }
  